<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/find/{{userId}}">User</a></li>
            <li class="breadcrumb-item active" aria-current="page">Balance</li>
        </ol>
    </nav>
    <div class="row pt-4 pb-4">
        <div class="col-md-6 offset-md-3">
            {{#each rows}}
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-8">
                            <h5>Available Balance</h5>
                            <h3>Php. {{this.balance}}
                                </h3>
                        </div>
                        <div class="col-md-4 d-flex align-items-center">
                            <a href="/cash-in/{{this.id}}" class="btn btn-primary btn-sm"><i class="bi bi-cash"></i> Cashin</a>
                        </div>
                    </div>
                </div>
                
            </div>
            {{/each}}
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-md-6 offset-md-3">
            <h4>Transaction History</h4>
            <table class="table border">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Money</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each transactions}}
                    <tr>
                        <td>{{this.created_at}}</td>
                        <td>Php. {{this.money}}</td>
                        <td>{{this.type}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>